{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "library",
  "extends": "./base.json",
  "include": [ "src/**/*.ts" ],
  "exclude": [
    "dist",
    "build",
    "**/tests",
    "**/__mocks__",
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [ "es2021",  "dom" ],
    "outDir": "./dist",
    "types": [ "node", "jest" ],
    "target": "esnext",
    "module": "ESNext",
    "baseUrl": "./",
    "rootDirs": [ "./dist" ],
    "moduleResolution": "Bundler",
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  }
}
