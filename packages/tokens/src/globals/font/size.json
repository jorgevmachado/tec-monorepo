{
  "font": {
    "size": {
      "$type": "fontSize",
      "tiny": {
        "$value": "{size.xx-small}",
        "$comment": "0.625rem => 10px if 16px = 1rem"
      },
      "x-small": {
        "$value": "{size.x-small}",
        "$comment": "0.75rem => 12px if 16px = 1rem"
      },
      "small": {
        "$value": "{size.small}",
        "$comment": "0.875rem => 14px if 16px = 1rem"
      },
      "regular": {
        "$value": "{size.regular}",
        "$comment": "1rem => 16px if 16px = 1rem"
      },
      "medium": {
        "$value": "{size.x-regular}",
        "$comment": "1.125rem => 18px if 16px = 1rem"
      },
      "large": {
        "$value": "{size.xx-regular}",
        "$comment": "1.25rem => 20px if 16px = 1rem"
      },
      "x-large": {
        "$value": "{size.medium}",
        "$comment": "1.5rem => 24px if 16px = 1rem"
      },
      "big": {
        "$value": "{size.large}",
        "$comment": "2rem => 32px if 16px = 1rem"
      },
      "huge": {
        "$value": "{size.xx-large}",
        "$comment": "2.5rem => 40px if 16px = 1rem"
      },
      "giant": {
        "$value": "{size.big}",
        "$comment": "3rem => 48px if 16px = 1rem"
      }
    }
  }
}